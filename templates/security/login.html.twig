{% extends 'base.html.twig' %}

{% block title %}Connectez-vous!{% endblock %}

{% block body %}

    {% include '/inc/navbar.html.twig' %}

    <div class="loginForm">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

                <h1 class="h3 mb-3 font-weight-normal title-login">Connectez-vous</h1>
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control email"
                       placeholder="Email" required autofocus>
                <label for="inputPassword" class="sr-only">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control passwordmail"
                       placeholder="Mot de passe" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="btn-authentification">
                    <button class="btn btn-primary" type="submit">
                        Valider
                    </button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
