<form method="post" action="{{ path('admin_program_delete', {'id': program.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir effacer ce programme ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ program.id) }}">
    <button class="btn btn-primary danger"><i class="fas fa-trash-alt"></i></button>
</form>
