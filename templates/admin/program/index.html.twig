{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}

    <div class="general row">

        {% include '/inc/navbarAdmin.html.twig' %}

        <div class="col">

            <h1>Liste des numéros</h1>

            <a class="btn btn-primary" href="{{ path('admin_program_new') }}">Créer un nouveau numéro</a>

            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for program in programs %}
                    <tr>
                        <td>{{ program.name }}</td>
                        <td>{{ resumePrograms[program.id] }}</td>
                        <td>{{ program.type.name }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('admin_program_show', {'id': program.id}) }}"><i
                                        class="far fa-eye"></i></a>
                            <a class="btn btn-primary" href="{{ path('admin_program_edit', {'id': program.id}) }}"><i
                                        class="fas fa-pencil-alt"></i></a>
                            <a class="btn">{{ include('admin/program/_delete_form.html.twig') }}</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun numéro créé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
